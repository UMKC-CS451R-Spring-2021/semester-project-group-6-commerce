

@{
    ViewData["Title"] = "Dashboard";
}

<!---Start new code---------------------------->
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="style.css">*@
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://unpkg.com/tachyons@4/css/tachyons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/tachyons@4.12.0/css/tachyons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>

</head>

<body>
    <div class="whitebackground">
        <img width=250 height=150 src="~/Images/cb.png" />
        <button class="textButton">
            <a href="logout">Logout</a>
        </button>
        <button class="textButton">
            <a href="https://www.commercebank.com/about-us">About Us</a>
        </button>
        <button class="textButton">
            Settings
        </button>
        <button class="textButton">
            Contact Us
        </button>
        <br>
        <br>
    </div>

    <div class="br3 ba b--black-10 mv4 w-25-l mw6 shadow-5 center zoom">
        <img src="~/Images/user.png" alt="Avatar" width="100" height="100">
        <h4><b>@ViewBag.Name</b></h4>
        <p>Checking / Savings? </p>
    </div>

    <div class="">
        <br>
        <div class="main">
            <article class="br3 ba b--black-10 bgc mv4 w-25-l mw6 shadow-5 center
            				animate__animated animate__zoomIn zoom">
                <u style="font-size:30px" class="font">Transactions</u>
                <br>
                <p style="font-size:20px" class="font">
                    View and edit all the transactions for your accounts here in a sorted list, or add new entries.
                </p>
                <br>
                <br>
                @*<button type="button" class="ba b--transparent ph0 mh0">
                        <legend class="f4 fw6 ph0 mh0">Open</legend>
                    </button>*@
                <a asp-action="Transactions" asp-controller="Home" class="btn ba b--transparent ph0 mh0">
                    Open
                </a>
                <br>
                <br>
            </article>

            <img width=400 height=375 src="https://rba.gov.au/publications/bulletin/2016/dec/images/graph-1216-5-01.gif" class="br3 ba b--black-10 bgc mv4 w-25-l mw6 shadow-5 center
            animate__animated animate__zoomIn zoom" />

            <article class="br3 ba b--black-10 bgc mv4 w-25-l mw6 shadow-5 center
            				animate__animated animate__zoomIn zoom">
                <u style="font-size:30px" class="font">Notifications</u>
                <br>
                <p style="font-size:20px" class="font">
                    View and manage all your notifications, or manage your notification settings here.
                </p>
                <br>
                <br>
                @*<button type="button" class="ba b--transparent ph0 mh0"
                data-toggle="modal"
                data-target="#myModal">
            <legend class="f4 fw6 ph0 mh0">Open</legend>
        </button>*@
                <a href="https://accounts.google.com/ServiceLogin/identifier?service=mail&passive=true&rm=false&continue=https%3A%2F%2Fmail.google.com%2Fmail%2F&ss=1&scc=1&ltmpl=default&ltmplcache=2&emr=1&osid=1&flowName=GlifWebSignIn&flowEntry=ServiceLogin" target="_blank" class="ba b--transparent ph0 mh0"
                >
            <legend class="f4 fw6 ph0 mh0">Open</legend>
        </a>
                <br>
                <br>
            </article>
        </div>

        <br>
        <br>
        <br>
        <br>
    </div>

    <div class="modal" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Manage Notifications</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Notifications</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
