<body>
    <partial name="_NotificationPanel" />
    <img src="~/Images/cb.png" class="center">
    <article class="br3 ba b--black-10 bgc mv4 w-100 w-50-m w-25-l mw6 shadow-5 center">
        <main class="pa4 black-80">
            <form class="measure" asp-action="Login" asp-controller="home" method="post">

                
                <!---------------------------------  start-->
                <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
                    <legend class="f4 fw6 ph0 mh0">Log In</legend>

                    <div class="mt3">
                        <label class="db fw6 lh-copy f6" for="email-address">Email</label>
                        <input class="pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100"
                               type="email"
                               name="username"
                               id="email-address" />
                    </div>

                    <div class="mv3">
                        <label class="db fw6 lh-copy f6" for="password">Password</label>
                        <input class="b pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100"
                               type="password"
                               name="password"
                               id="password"
                               pattern="(^(?=(.*[a-zA-Z].*){1,})(?=.*\d.*)(?=.*\W.*)[a-zA-Z0-9\S]|^(?=(.*[a-zA-Z].*){1,})(?=.*\d.*)[a-zA-Z0-9\S]|^(?=(.*[a-zA-Z].*){1,})(?=.*\W.*)[a-zA-Z0-9\S]{8,}$)"
                               title="A password must contain 1 upper case letter, 1 symbol, 1 number, and should be minimum of 8 characters" required />
                    </div>

                    <input type="checkbox" onclick="toggle()">Show Password

                    <div id="message">
                        <h3>Password must contain the following:</h3>
                        <p id="letter" class="invalid">A <b>uppercase</b> letter</p>
                        <p id="symbol" class="invalid">A <b>symbol</b></p>
                        <p id="number" class="invalid">A <b>number</b></p>
                        <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                    </div>

                </fieldset>

                <div class="">
                    <input class="b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib"
                           type="submit"
                           value="Login" />
                </div>

               
                <p><a asp-action="ForgotPassword" asp-controller="Home">Forgot password?</a></p>
                

            </form>
            <script>
    	var pass = document.getElementById("password");
    	var uletter = document.getElementById("letter");
    	var symb = document.getElementById("symbol");
    	var num = document.getElementById("number");
    	var len = document.getElementById("length");

    	pass.onfocus = function(){
    		document.getElementById("message").style.display = "block";
    	}
    	pass.onblur = function(){
    		document.getElementById("message").style.display = "none";
    	}

    	pass.onkeyup = function(){

    		var sym = /[.!#$%^&*()_+-=]/g;
    		if(pass.value.match(symb)) {
			    symb.classList.remove("invalid");
			    symb.classList.add("valid");
			  } else {
			    symb.classList.remove("valid");
			    symb.classList.add("invalid");
			}
			var upperLetter = /[A-Z]/g;
    		if(pass.value.match(upperLetter)) {
			    uletter.classList.remove("invalid");
			    uletter.classList.add("valid");
			  } else {
			    uletter.classList.remove("valid");
			    uletter.classList.add("invalid");
			}
			var numbers = /[0-9]/g;
    		if(pass.value.match(numbers)) {
			    num.classList.remove("invalid");
			    num.classList.add("valid");
			  } else {
			    num.classList.remove("valid");
			    num.classList.add("invalid");
			}

    		if(pass.value.length>=8) {
			    len.classList.remove("invalid");
			    len.classList.add("valid");
			  } else {
			    len.classList.remove("valid");
			    len.classList.add("invalid");
			}
    	}

    	function toggle() {
		  //var x = document.getElementById("password");
		  if (pass.type === "password") {
		    pass.type = "text";
		  } else {
		    pass.type = "password";
		  }
		}

